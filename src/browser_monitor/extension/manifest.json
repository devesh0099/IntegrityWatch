{
  "manifest_version": 3,
  "name": "IntegrityWatch Monitor",
  "version": "1.0.0",
  "description": "Real-time browser monitoring for exam integrity",
  
  "permissions": [
    "tabs",
    "webNavigation",
    "nativeMessaging"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
