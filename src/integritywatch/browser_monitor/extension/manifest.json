{
  "manifest_version": 3,
  "name": "IntegrityWatch Monitor",
  "version": "0.1.0",
  "key": "",
  "description": "Real-time browser monitoring for exam integrity",
  
  "permissions": [
    "tabs",
    "webNavigation",
    "nativeMessaging",
    "alarms",
    "scripting",
    "management"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["*://*.leetcode.com/*"],
      "js": ["leetcode_monitor.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],

  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  }
}
